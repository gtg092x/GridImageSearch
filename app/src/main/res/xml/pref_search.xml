<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
    Size (small, medium, large, extra-large)
    Color filter (black, blue, brown, gray, green, etc...)
    Type (faces, photo, clip art, line art)
    Site (espn.com)
    -->

    <ListPreference
        android:key="search_size"
        android:title="@string/pref_title_search_size"
        android:defaultValue="-1"
        android:entries="@array/pref_sizes"
        android:entryValues="@array/pref_sizes_values"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null" />

    <ListPreference
        android:key="search_color"
        android:title="@string/pref_color_title"
        android:defaultValue="-1"
        android:entries="@array/pref_color"
        android:entryValues="@array/pref_color_values"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null" />

    <ListPreference
        android:key="search_type"
        android:title="@string/pref_title_search_type"
        android:defaultValue="-1"
        android:entries="@array/pref_type"
        android:entryValues="@array/pref_type_values"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null" />

    <EditTextPreference
        android:key="search_domain"
        android:title="@string/pref_title_site_name"
        android:selectAllOnFocus="true"
        android:inputType="textNoSuggestions"
        android:capitalize="none"
        android:singleLine="true"
        android:maxLines="1" />


</PreferenceScreen>
